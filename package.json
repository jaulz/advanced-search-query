{
  "name": "search-string",
  "version": "4.0.0",
  "description": "Another parser for advanced search query syntax.",
  "main": "index.ts",
  "files": [
    "index.ts",
    "src"
  ],
  "types": "",
  "scripts": {
    "build": "ts-build ./src --cjs --esm",
    "ci": "npm run test && npm run build",
    "prepublish": "npm run ci",
    "test": "jest",
    "testWatch": "jest --watch"
  },
  "author": "Julian Hundeloh <julian@approvals.cloud> (https://approvals.cloud)",
  "license": "MIT",
  "keywords": [
    "query parser",
    "querystrings",
    "search",
    "search syntax parser",
    "search query"
  ],
  "repository": "git@github.com:jaulz/advanced-search-query.git",
  "devDependencies": {
    "@ts-tools/build": "^0.1.16",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.3",
    "jest": "^21.1.0",
    "jest-cli": "^21.1.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn install",
      "post-rewrite": "yarn install",
      "pre-commit": "pretty-quick --staged --verbose"
    }
  }
}
